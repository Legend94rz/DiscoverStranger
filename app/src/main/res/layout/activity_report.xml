<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				tools:context="org.helloworld.ReportAct"
				android:background="@color/white">

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="67dp"
		android:background="@drawable/actionbar_bg"
		android:gravity="center_vertical"
		android:layout_alignParentLeft="true"
		android:id="@+id/relativeLayout2"
		android:clickable="false"
		android:layout_marginLeft="-8dp"
		android:layout_marginRight="-8dp"
		android:layout_marginBottom="-8dp"
		android:layout_marginTop="-2dp">

		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:onClick="goback"
			android:clickable="true"
			android:background="@drawable/img_btn_mask"
			android:paddingRight="15dp"
			android:layout_centerVertical="true"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true">

			<TextView
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:textColor="#fff"
				android:background="@drawable/goback"
				android:textSize="14sp"
				android:layout_alignParentBottom="false"
				android:layout_centerVertical="true"
				android:layout_marginLeft="15dp"
				android:id="@+id/textView68"
				android:clickable="false"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20sp"
				android:textColor="#ffffff"
				android:id="@+id/textView69"
				android:layout_centerVertical="true"
				android:layout_toRightOf="@+id/textView68"
				android:layout_marginLeft="20dp"
				android:text="举报"/>
		</RelativeLayout>
	</RelativeLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/relativeLayout2"
		android:layout_centerHorizontal="true"
		android:id="@+id/linearLayout19"
		android:layout_marginLeft="15dp"
		android:layout_marginTop="8dp"
		android:layout_marginBottom="8dp">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="对方用户名："
			android:id="@+id/textView70"
			android:textSize="15sp"/>

		<EditText
			android:layout_width="wrap_content"
			android:layout_height="48dp"
			android:id="@+id/etTarget"
			android:layout_weight="1"
			android:background="@color/white"
			android:singleLine="true"/>
	</LinearLayout>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:id="@+id/textView71"
		android:layout_below="@+id/linearLayout19"
		android:layout_centerHorizontal="true"
		android:background="@color/lightgrey"/>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/linearLayout19"
		android:id="@+id/linearLayout20"
		android:layout_marginTop="10dp"
		android:gravity="top|bottom"
		android:layout_alignLeft="@+id/linearLayout19"
		android:layout_alignStart="@+id/linearLayout19">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="举报理由:"
			android:id="@+id/textView72"
			android:layout_below="@+id/textView71"
			android:layout_alignLeft="@+id/textView71"
			android:layout_alignStart="@+id/textView71"
			android:textSize="15sp"/>

		<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/etReason"
			android:layout_weight="1"
			android:background="@color/white"
			android:minHeight="200dp"
			android:gravity="top|left"
			android:padding="5dp"/>
	</LinearLayout>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:id="@+id/textView73"
		android:layout_below="@+id/linearLayout20"
		android:layout_centerHorizontal="true"
		android:background="@color/lightgray"/>

	<Button
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:text="确定"
		android:id="@+id/btnOK"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:background="@drawable/btn_rect_blue"
		android:textSize="16sp"
		android:textColor="@color/white"/>
</RelativeLayout>
