<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:app="http://schemas.android.com/apk/res-auto"
				android:orientation="vertical"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:weightSum="1"
				android:visibility="visible"
				android:background="@drawable/bz">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivHeadImg"
        android:orientation="vertical"
        android:layout_marginTop="55dp"
        android:id="@+id/layout1"
		android:background="#46ffffff">
     <TextView
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:id="@+id/lineTop"
         android:autoText="false"
         android:background="@color/white" />
    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/imageView4"
		android:src="@drawable/icon_user"
		android:layout_centerVertical="true"
		android:padding="5dp"/>
    <EditText
		android:id="@+id/etName"
		android:hint="请输入您的帐号"
		style="@style/fill_width_edit_text_style"
		android:layout_width="match_parent"
		android:layout_height="48dp"
        android:singleLine="true"
		android:layout_marginTop="0dp"
		android:layout_toEndOf="@+id/imageView4"
		android:background="@null"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@+id/imageView4"
		android:layout_marginLeft="5dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout2"
        android:layout_below="@+id/layout1"
		android:background="#46ffffff">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/etPassword"
        android:id="@+id/line"
        android:autoText="false"
        android:background="@color/white" />
    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
		android:id="@+id/imageView6"
        android:src="@drawable/icon_password"
		android:layout_centerVertical="true"
		android:padding="5dp"/>
	<EditText
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:inputType="textPassword"
		android:ems="10"
		android:id="@+id/etPassword"
		android:hint="请输入您的密码"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/line"
		style="@style/fill_width_edit_text_style"
        android:layout_toRightOf="@+id/imageView6"
        android:layout_toEndOf="@+id/imageView6"
        android:background="@null"
		/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/etPassword"
        android:autoText="false"
        android:background="@color/white" />
    </RelativeLayout>
	<Button
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:text="登   录"
		android:id="@+id/btnLogin"
		android:layout_below="@+id/layout2"
		android:layout_alignParentLeft="true"
		android:layout_alignRight="@+id/tvToRegister"
		android:layout_marginLeft="0dp"
		android:layout_marginRight="0dp"
		android:layout_marginTop="5dp"
		android:background="@drawable/round_rect_button"
		android:textColor="@color/white"
		android:textSize="20sp"
 />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="没有帐号,立即注册>>"
		android:id="@+id/tvToRegister"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		android:textSize="13sp"
		android:textColor="@color/white"
		android:paddingBottom="15dp"
		android:paddingLeft="10dp"
		android:paddingTop="10dp"
		android:paddingRight="10dp"
		android:clickable="true"
		android:enabled="true"
		android:autoText="false"
		android:background="@drawable/img_btn_mask"
		android:gravity="center"
		/>

	<ProgressBar
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/pbLoginProgress"
		android:indeterminate="false"
		android:visibility="invisible"
		android:layout_below="@+id/btnLogin"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="10dp"
		android:indeterminateDrawable="@drawable/progress_circle_anim"
		android:indeterminateDuration="1000"/>

	<org.helloworld.CircleImageView
		android:layout_width="120dp"
		android:layout_height="120dp"
		android:id="@+id/ivHeadImg"
        android:src="@drawable/head_test"
		android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
		app:border_width="2dp"
		app:border_overlay="true"
		app:border_color="@color/white"
       />


</RelativeLayout>