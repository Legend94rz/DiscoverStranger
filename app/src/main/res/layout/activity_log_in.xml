<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="vertical"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:weightSum="1"
				android:visibility="visible">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@color/actionbar_bg"
        android:gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:id="@+id/relativeLayout2">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:id="@+id/tvToId"
            android:text="登录"
            android:layout_alignBottom="@+id/button3"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
	<EditText
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/etName"
		android:hint="帐号"
		android:layout_marginTop="20dp"
		android:layout_below="@+id/ivHeadImg"
		android:layout_alignParentLeft="true"
		/>

	<EditText
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:inputType="textPassword"
		android:ems="10"
		android:id="@+id/etPassword"
		android:hint="密码"
		android:layout_below="@+id/etName"
		android:layout_alignParentLeft="true"
		/>

	<Button
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="登录"
		android:id="@+id/btnLogin"
		android:layout_below="@+id/etPassword"
		android:layout_alignParentLeft="true"
		android:layout_alignRight="@+id/tvToRegister"
		android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="没有帐号,立即注册>>"
		android:id="@+id/tvToRegister"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		android:textSize="13dp"
		android:textColor="#ff0084ff"
		android:paddingBottom="15dp"
		android:paddingLeft="10dp"
		android:paddingTop="10dp"
		android:paddingRight="10dp"
		android:clickable="true"
		android:enabled="true"
		android:autoText="false"/>

	<ProgressBar
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/pbLoginProgress"
		android:indeterminate="false"
		android:visibility="invisible"
		android:layout_below="@+id/btnLogin"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="10dp"/>

	<ImageView
		android:layout_width="128dp"
		android:layout_height="128dp"
		android:id="@+id/ivHeadImg"
        android:src="@drawable/nohead"
        android:layout_below="@+id/relativeLayout2"
        android:layout_toLeftOf="@+id/tvToRegister"
        android:layout_marginTop="60dp" />

</RelativeLayout>