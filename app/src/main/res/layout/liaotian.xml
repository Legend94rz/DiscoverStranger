<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
				android:paddingLeft="10dp">

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/tvDay"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		android:gravity="center_vertical"
		>

		<RelativeLayout
				   android:layout_width="wrap_content"
					  android:layout_height="wrap_content"
				   android:padding="5dp"
				   android:id="@+id/relativeLayout17"
				   android:layout_below="@+id/tvDay"
				   android:layout_alignParentLeft="true"
				   android:layout_alignParentStart="true">
					  <org.helloworld.CircleImageView
						  android:id="@+id/imgHead"
						  android:layout_width="40dp"
							android:layout_height="40dp"
							android:src="@drawable/icon"
						  />
		</RelativeLayout>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="60dp"
			android:paddingTop="5dp"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:layout_toRightOf="@+id/relativeLayout17"
			android:layout_toEndOf="@+id/relativeLayout17">

			<LinearLayout
				android:orientation="vertical"
				android:layout_toRightOf="@id/imgHead"
				android:paddingLeft="8dip"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/linearLayout"
				android:layout_toLeftOf="@+id/l2"
				android:layout_toStartOf="@+id/l2">
				<TextView
					android:id="@+id/tvName"
					android:layout_width="wrap_content"
					  android:layout_height="wrap_content"
					  android:layout_weight="1"
					  android:text="肖秀"
					  android:padding="2dip"
					android:singleLine="true"
					  android:gravity="center"
					  android:textColor="@color/black"
					android:textSize="16dp"/>
				<TextView
					android:id="@+id/tvLastmsg"
					android:layout_width="wrap_content"
					  android:layout_height="wrap_content"
					android:text="这是唯一一个正常的朋友"
					  android:textSize="14sp"
					android:singleLine="true"
					  android:gravity="center"
					  android:textColor="@color/gray"
					android:padding="2dp"/>
			</LinearLayout>

			<RelativeLayout
				android:id="@+id/l2"
				android:layout_alignParentRight="true"
				android:orientation="vertical"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:columnCount="2"
				android:rowCount="2"
				android:layout_marginRight="10dp">

				<TextView
					  android:id="@+id/tvTime"
						android:layout_width="wrap_content"
					  android:layout_height="wrap_content"
					  android:padding="2dip"
					  android:text="16:45"
					  android:textSize="15sp"
					  android:gravity="center"
					  android:singleLine="true"
					  android:textColor="@color/gray"
						android:layout_column="0"
						android:layout_row="0"
						android:layout_columnSpan="2"
					  android:layout_alignParentLeft="true"
					  android:layout_alignParentTop="true"
					/>

				<TextView
					android:id="@+id/tvCount"
					android:layout_width="wrap_content"
					  android:layout_height="wrap_content"
					android:textSize="14sp"
					  android:singleLine="true"
					android:textColor="@color/white"
					android:layout_column="1"
					android:layout_row="1"
					android:background="@drawable/unread"
					android:text="1"
					android:layout_gravity="center_horizontal"
					android:gravity="center"
					android:layout_below="@+id/tvTime"
					android:layout_centerHorizontal="true"/>
			</RelativeLayout>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="1px"
				android:id="@+id/textView32"
				android:background="@color/lightgray"
				android:layout_alignParentTop="false"
				android:layout_toEndOf="@+id/relativeLayout17"
				android:layout_alignParentBottom="true"/>

		</RelativeLayout>
	</LinearLayout>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="今天"
		android:id="@+id/tvDay"
		android:layout_marginTop="5dp"
		android:textSize="15dp"
		android:textColor="@color/darkslategrey"
		android:layout_marginBottom="5dp"
		android:visibility="gone"/>

</RelativeLayout>