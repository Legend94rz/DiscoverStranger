<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<LinearLayout 
	          android:paddingLeft="15dip"
	          android:paddingRight="15dip"
	          android:orientation="vertical" 
	          android:layout_width="fill_parent"
              android:layout_height="fill_parent"
	          >

	<LinearLayout
		          android:orientation="horizontal" 
		          android:paddingTop="15dip"
		          android:paddingBottom="15dip"
		          android:paddingLeft="5dip"
		          android:layout_width="match_parent"
	              android:layout_height="wrap_content"
				  android:id="@+id/llShake"
				  android:clickable="true"
				  android:onClick="llShack_Click">
		          <ImageView
		              android:layout_width="35dp"
	              	  android:layout_height="35dp"
	              	  android:src="@drawable/find_more_friend_shake"
	              	  android:scaleType="fitCenter"
		              />
		          <TextView
		              android:layout_width="wrap_content"
	              	  android:layout_height="fill_parent"
	              	  android:layout_marginLeft="10dp"
	              	  android:text="@string/shake"
	              	  android:textSize="15sp"
	              	  android:gravity="center"
	              	  android:textColor="@color/black"
		              />
		      </LinearLayout>

	<TextView
		android:layout_width="fill_parent"
		android:layout_height="1.5dp"
		android:background="@color/lightgray"
		android:id="@+id/textView"/>

	<LinearLayout
		android:orientation="horizontal"
		android:paddingTop="15dip"
		android:paddingBottom="15dip"
		android:paddingLeft="5dip"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/llNearStanger"
		android:clickable="true"
		android:onClick="llNearStranger_Click">

		<ImageView
			android:layout_width="35dp"
			android:layout_height="35dp"
			android:src="@drawable/find_more_friend_near_icon"
			android:scaleType="fitCenter"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:layout_marginLeft="10dp"
			android:text="@string/nearstranger"
			android:textSize="15sp"
			android:gravity="center"
			android:textColor="@color/black"/>
	</LinearLayout>

	<TextView
		          android:layout_width="fill_parent"
	              android:layout_height="1.5dp"
	              android:background="@color/lightgray"
		          />

	<TextView
		          android:layout_width="fill_parent"
	              android:layout_height="0.5dp"
	              android:background="@color/lightgray"
		          />

	<LinearLayout
		android:orientation="horizontal"
		android:paddingTop="15dip"
		android:paddingBottom="15dip"
		android:paddingLeft="5dip"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/llSettings"
		android:clickable="true">

		<ImageView
			android:layout_width="35dp"
			android:layout_height="35dp"
			android:src="@drawable/settings"
			android:scaleType="fitCenter"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:layout_marginLeft="10dp"
			android:text="设置    ( 暂未实现 )"
			android:textSize="15sp"
			android:gravity="center"
			android:textColor="@color/black"/>
	</LinearLayout>

</LinearLayout>
</LinearLayout>