<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.qf.study.GameSplash"
                android:background="@drawable/game_splash">


    <Button
        android:layout_width="120dp"
        android:layout_height="46dp"
        android:text="开始挑战"
        android:id="@+id/button"
        android:background="@drawable/round_rect_button"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btnRank"
        android:layout_alignStart="@+id/btnRank"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="46dp"
        android:text="排行榜"
        android:id="@+id/btnRank"
        android:layout_marginTop="26dp"
        android:background="@drawable/round_rect_button"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
