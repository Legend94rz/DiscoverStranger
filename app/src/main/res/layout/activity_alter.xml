<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				tools:context="org.helloworld.Alter">


	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="67dp"
		android:background="@drawable/actionbar_bg"
		android:gravity="center_vertical"
		android:layout_alignParentLeft="true"
		android:id="@+id/relativeLayout2"
		android:clickable="false"
		android:layout_marginLeft="-8dp"
		android:layout_marginRight="-8dp"
		android:layout_marginBottom="-8dp"
		android:layout_marginTop="-2dp">

		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:onClick="goback"
			android:clickable="true"
			android:background="@drawable/img_btn_mask"
			android:paddingRight="15dp"
			android:layout_centerVertical="true"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true">

			<TextView
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:textColor="#fff"
				android:background="@drawable/goback"
				android:textSize="14sp"
				android:layout_alignParentBottom="false"
				android:layout_centerVertical="true"
				android:layout_marginLeft="15dp"
				android:id="@+id/button3"
				android:clickable="false"
				/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20sp"
				android:textColor="#ffffff"
				android:id="@+id/tvToId"
				android:layout_centerVertical="true"
				android:layout_toRightOf="@+id/button3"
				android:layout_marginLeft="20dp"
				android:text="编辑个人资料"/>
		</RelativeLayout>
	</RelativeLayout>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/linearLayout_AlterPassword"
		android:background="@drawable/img_btn_mask"
		android:layout_below="@+id/linearLayout_AlterBasicInfo"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:clickable="true">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="修改密码"
			android:id="@+id/textView3"
			android:textSize="16sp"
			android:layout_margin="15dp"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="1px"
			android:id="@+id/textView28"
			android:background="@color/lightgray"/>
	</LinearLayout>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/linearLayout_AlterAvatar"
		android:background="@drawable/img_btn_mask"
		android:layout_below="@+id/linearLayout_AlterPassword"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="修改头像"
			android:id="@+id/textView4"
			android:textSize="16sp"
			android:layout_margin="15dp"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="1px"
			android:id="@+id/textView29"
			android:background="@color/lightgray"/>

	</LinearLayout>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/linearLayout_AlterBasicInfo"
		android:background="@drawable/img_btn_mask"
		android:layout_below="@+id/relativeLayout2"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:clickable="true">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="修改基本资料"
			android:id="@+id/textView2"
			android:textSize="16sp"
			android:layout_margin="15dp"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="1px"
			android:id="@+id/textView30"
			android:background="@color/lightgray"/>

	</LinearLayout>
</RelativeLayout>
